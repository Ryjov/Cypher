@model IEnumerable<TatCypherWebApp.Models.MessageModel>

@{
    ViewBag.Title = "Список сообщений";
}

<h2>Список сообщений</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OriginalMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EncryptedMessage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EncryptedMessage)
        </td>
    </tr>
}

</table>
